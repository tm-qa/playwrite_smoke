<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <test name="Frontend Tests" verbose="2" preserve-order="true">
        <groups>
            <run>
                <!-- This will read the group name dynamically from -DgroupName -->
                <include name="${groupName}"/>
            </run>
        </groups>

        <classes>
            <class name="smoke.Smoke_Test"/>
        </classes>
    </test>
</suite>